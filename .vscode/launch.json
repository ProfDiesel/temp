{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Lancer",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/feedlib/_build/debug/player",
            "args": ["${workspaceFolder}/scenario"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Activer l'impression en mode Pretty pour gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "ppf/prjdef",
            "type": "python",
            "request": "launch",
            "module": "genjutsu",
            "args": ["${workspaceFolder}/ppf/prjdef"],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/../dependencies"
            }
        },
        {
            "name": "prjdef",
            "type": "python",
            "request": "launch",
            "module": "genjutsu",
            "args": ["${workspaceFolder}/prjdef"],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/../dependencies"
            }
        }
    ]
}
